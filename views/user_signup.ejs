<link rel="stylesheet" href="/css/user_signup.css" />

<div id="signup-section">
  <h1>Sign Up Page</h1>
  <br />
  <form action="/users/createuser" method="post">
    <label for="uname">Username : </label>
    <input
      type="text"
      name="uname"
      id="uname"
      placeholder="Enter your name here"
      required
    />
    <br /><br />
    <label for="uemail">Email : </label>
    <input
      type="email"
      name="uemail"
      id="uemail"
      placeholder="Enter your email here"
      required
    />
    <br /><br />
    <label for="upass">Password : </label>
    <input type="password" name="upass" id="upass" required />
    <br /><br />
    <label for="upassconfirm">Confirm Password : </label>
    <input type="password" name="upassconfirm" id="upassconfirm" required />
    <br /><br />

    <button type="submit">Create Account</button>
    <button type="reset">Clear</button>
  </form>

  <p>
    <a href="/users/auth/google">Google Sign In/Sign Up</a>
  </p>
</div>

<script ref="/js/user_signup.js"></script>
